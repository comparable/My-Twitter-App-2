<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#212121" >
        
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivProfileImage"
            android:text="name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" 
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:text="Tagline"
            android:textColor="#FFFFFF"
            android:textSize="12sp" 
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/profile_image_shape"
             />

     </RelativeLayout>

     <LinearLayout
         android:id="@+id/llCounts"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/rlHeader"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="5dp"
         android:orientation="horizontal" >
        
			<LinearLayout
	         android:id="@+id/llTweets"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:orientation="vertical" 
	         android:layout_weight="1">
	         
		         <TextView
	             android:id="@+id/tvTweets"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="10dp"
	             android:text="tweets"
	             android:textSize="13sp" 
	             android:textStyle="bold"
	             android:layout_gravity="center_horizontal"/>

		         <TextView
		             android:id="@+id/tvTweetsLabel"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_marginLeft="10dp"
		             android:text="@string/tweets_label"
		             android:textSize="13sp" 
		             android:textColor="#8C8C8C"
		             android:layout_gravity="center_horizontal"/>

			</LinearLayout>
			
			<LinearLayout
	         android:id="@+id/llFollowing"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:orientation="vertical"
	         android:layout_weight="1" >

		         <TextView
		             android:id="@+id/tvFollowing"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_marginLeft="10dp"
		             android:text="following"
		             android:textSize="13sp" 
		             android:textStyle="bold"
		             android:layout_gravity="center_horizontal"/>

		         <TextView
		             android:id="@+id/tvFollowingLabel"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_marginLeft="10dp"
		             android:text="@string/following_label"
		             android:textSize="13sp"
		             android:textColor="#8C8C8C" 
		             android:layout_gravity="center_horizontal"/>

			</LinearLayout>
			
			<LinearLayout
	         android:id="@+id/llFollowers"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:orientation="vertical"
	         
	         android:layout_weight="1" >
		         <TextView
		             android:id="@+id/tvFollower"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_marginLeft="10dp"
		             android:text="followers"
		             android:textSize="13sp" 
		             android:textStyle="bold"
		             android:layout_gravity="center_horizontal"/>

		         <TextView
		             android:id="@+id/tvFollowersLabel"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_marginLeft="10dp"
		             android:text="@string/followers_label"
		             android:textSize="13sp" 
		             android:textColor="#8C8C8C"
		             android:layout_gravity="center_horizontal"/>

			</LinearLayout>
         
     </LinearLayout>

</RelativeLayout>
